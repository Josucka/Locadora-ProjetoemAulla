@model Musicas


@if (Model == null)
{
    <h1>@Model.Nome Nao EXISTE</h1>
    <a asp-action="Index">Voltar</a>
}
else
{
    <h1>Tela de Exibiçao de Musicas</h1>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(Model => Model.Id)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(Model => Model.Id)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(Model => Model.Nome)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(Model => Model.Nome)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(Model => Model.Cantor)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(Model => Model.Cantor)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(Model => Model.FilmeId)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(Model => Model.FilmeId)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(Model => Model.Lancamento)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(Model => Model.Lancamento)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(Model => Model.Genero)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(Model => Model.Genero)</dd>
    </dl>
}

<a class="btn btn-info" asp-controller="Musicas" asp-action="Index">Voltar</a>