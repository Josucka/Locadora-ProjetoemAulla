@model Musicas

<h2>Cadastrar Nova Musica</h2>
<div class="row">
    <form class="col-md-4" asp-action="Update">
        <div class="form-group">
            <label asp-for="Nome" class="control-label" >Nome da Musica:</label> <!--Talvez colocar um Request-->
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Cantor" class="control-label">Cantor(a):</label>
            <input asp-for="Cantor" class="form-control" />
            <span asp-validation-for="Cantor" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Lancamento" class="control-label">Data de Lançamento</label>
            <input asp-for="Lancamento" class="form-control" />
            <span asp-validation-for="Lancamento" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Genero" class="control-label">Genero:</label>
            <input asp-for="Genero" class="form-control" />
            <span asp-validation-for="Genero" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="FilmeId" class="control-label">Filme Relacionado:</label>
            <select asp-for="FilmeId" class="form-control" asp-items="ViewBag.listaFilmes">
                <option value="">--Filme Correspondente--</option>
            </select>
            @*<input asp-for="FilmeId" class="form-control" />*@
            <span asp-validation-for="FilmeId" class="text-danger" />
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Create"/>
            <a class="btn btn-info" asp-controller="Filmes" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
